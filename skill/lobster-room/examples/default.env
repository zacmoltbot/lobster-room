# /etc/default/lobster-room
# Environment for the systemd service.

# Required: gateway config
# Example (object format):
# LOBSTER_ROOM_GATEWAYS_JSON='{"gateways":[{"id":"zacbot","label":"Zacbot","baseUrl":"https://zacbot.zeabur.app","tokenEnv":"OPENCLAW_GATEWAY_TOKEN"}],"pollSeconds":2,"activeWindowMs":10000}'
LOBSTER_ROOM_GATEWAYS_JSON=

# Required: tokens referenced by tokenEnv
OPENCLAW_GATEWAY_TOKEN=

# Optional tuning
LOBSTER_ROOM_POLL_SECONDS=2
LOBSTER_ROOM_ACTIVE_WINDOW_MS=10000
LOBSTER_ROOM_TOOL_TTL_MS=8000
LOBSTER_ROOM_CACHE_TTL_MS=5000
LOBSTER_ROOM_DEBUG=0
